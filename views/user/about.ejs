<%- include("../../views/partials/user/header") %>

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - Your Mobile Store</title>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@500&family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: #333;
        }

        /* Hero Section */
        .hero-section {
            width: 100%;
            max-width: 2000px;
            height: 80vh;
            position: relative;
            background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
            overflow: hidden;
        }

        .hero-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 140px 20px;
            position: relative;
            overflow: hidden;
        }

        .hero-container::before {
            content: '';
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(15, 15, 17, 0.1) 0%, rgba(34, 36, 37, 0.05) 100%);
            top: -50px;
            left: -50px;
            z-index: -1;
        }

        .hero-container::after {
            content: '';
            position: absolute;
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(15, 15, 17, 0.1) 0%, rgba(34, 36, 37, 0.05) 100%);
            bottom: -30px;
            right: -30px;
            z-index: -1;
        }

        .hero-subtitle {
            color: #3e3f3fc2;
            font-size: 18px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 20px;
            opacity: 0;
            animation: fadeUp 0.8s forwards;
            animation-delay: 0.2s;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1.1;
            margin-bottom: 30px;
            position: relative;
            opacity: 0;
            animation: fadeUp 0.8s forwards;
            animation-delay: 0.4s;
            font-family: 'Unbounded', cursive;
        }

        .hero-description {
            max-width: 700px;
            font-size: 18px;
            line-height: 1.8;
            color: #666;
            margin-bottom: 40px;
            opacity: 0;
            animation: fadeUp 0.8s forwards;
            animation-delay: 0.6s;
        }

        /* Story Section */
        .story-section {
            padding: 80px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .story-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
            margin-bottom: 80px;
        }

        .story-text h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            font-family: 'Unbounded', cursive;
            color: #1a1a1a;
        }

        .story-text p {
            font-size: 16px;
            line-height: 1.8;
            color: #555;
            margin-bottom: 20px;
        }

        .story-image {
            text-align: center;
        }

        .story-image img {
            width: 100%;
            max-width: 500px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        /* Values Section */
        .values-section {
            background: #f8fafc;
            padding: 80px 20px;
        }

        .values-container {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .values-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 50px;
            font-family: 'Unbounded', cursive;
            color: #1a1a1a;
        }

        .values-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-top: 50px;
        }

        .value-card {
            background: white;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }

        .value-card:hover {
            transform: translateY(-10px);
        }

        .value-icon {
            width: 60px;
            height: 60px;
            margin: 0 auto 20px;
            background: linear-gradient(90deg, #636566 0%, #262729 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
        }

        .value-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: #1a1a1a;
        }

        .value-card p {
            color: #666;
            line-height: 1.6;
        }

        /* Team Section */
        .team-section {
            padding: 80px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .team-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 50px;
            font-family: 'Unbounded', cursive;
            color: #1a1a1a;
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 40px;
        }

        .team-card {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }

        .team-card:hover {
            transform: translateY(-5px);
        }

        .team-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #636566 0%, #262729 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            color: white;
            font-weight: bold;
        }

        .team-card h3 {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 5px;
            color: #1a1a1a;
        }

        .team-card .role {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .team-card p {
            color: #555;
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Stats Section */
        .stats-section {
            background: linear-gradient(70deg, #636566 0%, #000000 100%);
            color: white;
            padding: 80px 20px;
        }

        .stats-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 40px;
            text-align: center;
        }

        .stat-item h3 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 10px;
        }

        .stat-item p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* CTA Section */
        .cta-section {
            padding: 80px 20px;
            text-align: center;
            background: #f8fafc;
        }

        .cta-content h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            font-family: 'Unbounded', cursive;
            color: #1a1a1a;
        }

        .cta-content p {
            font-size: 18px;
            color: #666;
            margin-bottom: 40px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-button {
            display: inline-block;
            background: linear-gradient(90deg, #636566 0%, #262729 100%);
            color: white;

            padding: 16px 40px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            box-shadow: 0 10px 20px rgba(10, 10, 11, 0.3);
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.7s;
        }

        .cta-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(11, 12, 12, 0.4);
            text-decoration: none;
            color: white;
        }

        .cta-button:hover::before {
            left: 100%;
        }

        /* Animations */
        @keyframes fadeUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media screen and (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 14px;
            }

            .hero-description {
                font-size: 16px;
            }

            .story-content {
                grid-template-columns: 1fr;
                gap: 40px;
            }

            .story-text h2,
            .values-title,
            .team-title,
            .cta-content h2 {
                font-size: 2rem;
            }

            .values-grid,
            .team-grid {
                grid-template-columns: 1fr;
            }

            .stats-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 30px;
            }

            .stat-item h3 {
                font-size: 2rem;
            }
        }

        @media screen and (max-width: 480px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-container {
                padding: 100px 20px;
            }

            .story-section,
            .values-section,
            .team-section,
            .stats-section,
            .cta-section {
                padding: 60px 20px;
            }

            .stats-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-container">
            <h3 class="hero-subtitle">About Our Company</h3>
            <h1 class="hero-title">Redefining Mobile Excellence</h1>
            <p class="hero-description">
                We are passionate about bringing you the latest in mobile technology. From flagship smartphones to budget-friendly options, we curate the finest collection of devices that connect you to what matters most.
            </p>
        </div>
    </section>

    <!-- Story Section -->
    <section class="story-section">
        <div class="story-content">
            <div class="story-text">
                <h2>Our Story</h2>
                <p>
                    Founded in 2025, we started with a simple mission: to make premium mobile technology accessible to everyone. What began as a small venture has grown into a trusted destination for mobile enthusiasts across the country.
                </p>
                <p>
                    We believe that a smartphone is more than just a device—it's your gateway to endless possibilities. That's why we carefully select each product in our catalog, ensuring that every phone we offer meets our high standards for quality, performance, and value.
                </p>
                <p>
                    Today, we're proud to serve thousands of satisfied customers who trust us to help them find the perfect mobile companion for their lifestyle.
                </p>
            </div>
            <div class="story-image">
                <img src="/img/about2.png" alt="Our journey in mobile technology">
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="values-section">
        <div class="values-container">
            <h2 class="values-title">Our Values</h2>
            <div class="values-grid">
                <div class="value-card">
                    <div class="value-icon">🚀</div>
                    <h3>Innovation First</h3>
                    <p>We stay ahead of technology trends to bring you the most innovative and cutting-edge mobile devices available in the market.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">⭐</div>
                    <h3>Quality Assurance</h3>
                    <p>Every product goes through rigorous quality checks. We partner only with authorized dealers and trusted brands to ensure authenticity.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">💎</div>
                    <h3>Customer Delight</h3>
                    <p>Your satisfaction is our priority. From pre-purchase guidance to after-sales support, we're committed to exceeding your expectations.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">🔒</div>
                    <h3>Trust & Transparency</h3>
                    <p>We believe in honest pricing, transparent policies, and building long-term relationships based on trust and reliability.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <h2 class="team-title">Meet Our Team</h2>
        <div class="team-grid">
            <div class="team-card">
                <div class="team-avatar">MM</div>
                <h3>Muzammil Muhammed</h3>
                <p class="role">Founder & CEO</p>
                <p>Passionate about technology and customer experience. Leads our vision of making premium mobiles accessible to everyone.</p>
            </div>
            <div class="team-card">
                <div class="team-avatar">PM</div>
                <h3>Priya Malhotra</h3>
                <p class="role">Head of Operations</p>
                <p>Ensures smooth operations and timely delivery. Expert in supply chain management and customer satisfaction.</p>
            </div>
            <div class="team-card">
                <div class="team-avatar">RK</div>
                <h3>Rohit Kumar</h3>
                <p class="role">Tech Specialist</p>
                <p>Mobile technology expert who helps curate our product catalog and provides technical guidance to customers.</p>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="stats-container">
            <div class="stat-item">
                <h3>50K+</h3>
                <p>Happy Customers</p>
            </div>
            <div class="stat-item">
                <h3>500+</h3>
                <p>Mobile Models</p>
            </div>
            <div class="stat-item">
                <h3>25+</h3>
                <p>Top Brands</p>
            </div>
            <div class="stat-item">
                <h3>99%</h3>
                <p>Customer Satisfaction</p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Upgrade?</h2>
            <p>
                Discover our carefully curated collection of premium smartphones and find the perfect device that matches your style and needs.
            </p>
            <a href="/shop" class="cta-button">Explore Products</a>
        </div>
    </section>

    <script>
        // Add scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.querySelectorAll('.story-content, .value-card, .team-card, .stat-item').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'all 0.6s ease';
            observer.observe(el);
        });

        // Counter animation for stats
        const animateCounter = (element, target) => {
            let current = 0;
            const increment = target / 100;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                
                if (target >= 1000) {
                    element.textContent = Math.floor(current / 1000) + 'K+';
                } else if (target >= 100) {
                    element.textContent = Math.floor(current) + '%';
                } else {
                    element.textContent = Math.floor(current) + '+';
                }
            }, 20);
        };

        // Trigger counter animation when stats section is visible
        const statsObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const counters = entry.target.querySelectorAll('.stat-item h3');
                    const targets = [50000, 500, 25, 99];
                    
                    counters.forEach((counter, index) => {
                        animateCounter(counter, targets[index]);
                    });
                    
                    statsObserver.unobserve(entry.target);
                }
            });
        }, observerOptions);

        const statsSection = document.querySelector('.stats-section');
        if (statsSection) {
            statsObserver.observe(statsSection);
        }
    </script>
    <%- include("../../views/partials/user/footer") %>

</body>
</html>