<%- include("../../views/partials/user/header") %>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .product-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .section-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .section-header h1 {
        font-size: 2.5em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .section-header p {
        font-size: 1.1em;
        margin-bottom: 20px;
    }

    .filter-sort {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .sort-dropdown {
        padding: 10px;
        font-size: 1em;
        border-radius: 5px;
        /* border: 1px solid #ccc; */
        cursor: pointer;
        width: 200px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin-bottom: 50px;
    }

    .product-card {
        border: 0.1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        background-color: white;
    }

    .product-image img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .product-details {
        padding: 20px;
        text-align: center;
    }

    .product-details h3 {
        font-size: 1.2em;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .price {
        font-size: 1.1em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .rating {
        font-size: 0.9em;
        margin-bottom: 15px;
    }

    .add-to-cart {
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        border: 1px solid #000;
        background: transparent;
    }

    .see-more {
        text-align: center;
    }

    .see-more-button {
        display: inline-block;
        background: linear-gradient(90deg, #636566 0%, #262729 100%);
        color: white;
        padding: 16px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        box-shadow: 0 10px 20px rgba(10, 10, 11, 0.3);
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        opacity: 0;
        animation: fadeUp 0.8s forwards;
        animation-delay: 0.8s;
        margin-bottom: 150px;
    }

    .discover-section {
        width: 100%;
        max-width: 2000px;
        height: 80%;
    }

    .discover-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 140px 0;
        position: relative;
        overflow: hidden;
    }

    .discover-container::before {
        content: '';
        position: absolute;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(15, 15, 17, 0.1) 0%, rgba(34, 36, 37, 0.05) 100%);
        top: -50px;
        left: -50px;
        z-index: -1;
    }

    .discover-container::after {
        content: '';
        position: absolute;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(15, 15, 17, 0.1) 0%, rgba(34, 36, 37, 0.05) 100%);
        bottom: -30px;
        right: -30px;
        z-index: -1;
    }

    .discover-subtitle {
        color: #3e3f3fc2;
        font-size: 18px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 3px;
        margin-bottom: 20px;
        opacity: 0;
        animation: fadeUp 0.8s forwards;
        animation-delay: 0.2s;
    }

    .discover-title {
        font-size: 4rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 30px;
        position: relative;
        opacity: 0;
        animation: fadeUp 0.8s forwards;
        animation-delay: 0.4s;
        font-family: 'Unbounded', cursive;
    }

    .discover-title::after {
        content: '';
        display: block;
        width: 100px;
        height: 5px;
        margin: 25px auto 0;
        border-radius: 3px;
    }

    .discover-description {
        max-width: 700px;
        font-size: 18px;
        line-height: 1.8;
        color: #666;
        margin-bottom: 40px;
        opacity: 0;
        animation: fadeUp 0.8s forwards;
        animation-delay: 0.6s;
    }

    .discover-button {
        display: inline-block;
        background: linear-gradient(90deg, #636566 0%, #262729 100%);
        color: white;
        padding: 16px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        box-shadow: 0 10px 20px rgba(10, 10, 11, 0.3);
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        opacity: 0;
        animation: fadeUp 0.8s forwards;
        animation-delay: 0.8s;
    }

    .discover-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.7s;
    }

    .discover-button:hover {
        box-shadow: 0 15px 30px rgba(11, 12, 12, 0.4);
    }

    .discover-button:hover::before {
        left: 100%;
    }

    .decoration {
        position: absolute;
        opacity: 0.1;
        z-index: -1;
    }

    @keyframes float {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-20px);
        }
    }

    @keyframes fadeUp {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive styles */
    @media screen and (max-width: 992px) {
        .discover-title {
            font-size: 60px;
        }
    }

    @media screen and (max-width: 768px) {
        .discover-title {
            font-size: 48px;
        }
        .discover-description {
            font-size: 16px;
        }
        .decoration {
            display: none;
        }
    }

    @media screen and (max-width: 480px) {
        .discover-title {
            font-size: 36px;
        }
        .discover-subtitle {
            font-size: 14px;
        }
        .discover-description {
            font-size: 14px;
        }
        .discover-button {
            padding: 14px 30px;
            font-size: 14px;
        }
    }

    /* Benefits */
    .benefits {
        padding: 4rem 5%;
        background: #f8fafc;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .benefit-item {
        text-align: center;
        padding: 2rem;
    }

    .benefit-item img {
        width: 48px;
        height: 48px;
        margin-bottom: 1rem;
    }

    .benefit-item h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: #1e293b;
    }

    .benefit-item p {
        color: #64748b;
    }

    .ecom-banner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 80px 60px;
        background: linear-gradient(to right, #ffffff, #ffffff);
        font-family: 'Nunito', sans-serif;
        overflow: hidden;
        gap: 40px;
    }

    .ecom-banner .text-content {
        flex: 1;
        animation: slideInLeft 1s ease-out;
    }

    .ecom-banner .title {
        font-family: 'Unbounded', cursive;
        font-size: 3.5em;
        margin-bottom: 20px;
        line-height: 1.2;
        background: linear-gradient(90deg, #111, #333);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .ecom-banner .description {
        font-size: 1.2em;
        line-height: 1.6;
        color: #555;
    }

    .ecom-banner .image-content {
        flex: 0 0 50%;
        animation: slideInRight 1s ease-out;
        text-align: right;
    }

    .ecom-banner .banner-img {
        width: 100%;
        max-width: none;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    @keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-50px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slideInRight {
        from { opacity: 0; transform: translateX(50px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @media (max-width: 768px) {
        .ecom-banner {
            flex-direction: column;
            text-align: center;
            padding: 50px 20px;
        }

        .ecom-banner .image-content {
            flex: none;
            width: 100%;
            text-align: center;
        }

        .ecom-banner .banner-img {
            width: 90%;
            max-width: 350px;
            height: 90%;
        }
    }

    .products-container {
        font-family: 'Poppins', sans-serif;
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .product-listing {
        margin: 40px 0;
        display: grid;
        gap: 40px;
    }

    .section {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 30px;
        transition: transform 0.3s ease;
    }

    .section h2 {
        color: #1e293b;
        font-size: 28px;
        font-weight: 700;
        border-bottom: 2px solid #e2e8f0;
        padding-bottom: 15px;
        margin-bottom: 25px;
        font-family: 'Unbounded', cursive;
        letter-spacing: 0.5px;
    }

    .products {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
    }

    .product-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        /* border: 1px solid #e2e8f0; */
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .product-card:hover {
        box-shadow: 0 8px 25px rgba(99, 99, 99, 0.1);
        text-decoration: none;
    }

    .product-card img {
        max-width: 100%;
        height: 220px;
        object-fit: contain;
        border-radius: 8px;
        transition: transform 0.3s ease;
        margin-bottom: 15px;
    }

    .product-card:hover img {
        transform: scale(1.05);
    }

    .product-card h3 {
        font-size: 18px;
        color: #1e293b;
        margin: 10px 0;
        font-weight: 600;
        font-family: 'Poppins', sans-serif;
        line-height: 1.4;
        min-height: 44px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .price-container {
        margin: 10px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
    }

    .product-card .price {
        color: #111827;
        font-size: 22px;
        font-weight: 700;
        font-family: 'Poppins', sans-serif;
    }

    .original-price {
        text-decoration: line-through;
        color: #6b7280;
        font-size: 16px;
        font-weight: 400;
    }

    .savings {
        color: #059669;
        font-size: 14px;
        font-weight: 600;
    }

    .discount-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: linear-gradient(90deg, #e11d48, #be123c);
        color: white;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 12px;
        z-index: 1;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .discount-badge i {
        font-size: 14px;
    }

    .product-offers {
        margin-top: 10px;
        text-align: left;
        font-size: 14px;
        color: #059669;
        background: #f0fdf4;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .product-offers h4 {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 5px;
        color: #065f46;
    }

    .product-offers ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .product-offers li {
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        gap: 8px;
        color: #065f46;
    }

    .product-offers li i {
        color: #10b981;
        font-size: 14px;
    }

    .product-card .price-container .savings {
        color: #16a34a;
        font-size: 14px;
        font-weight: 600;
    }

    .product-card button {
        background: linear-gradient(90deg, #111827 0%, #374151 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        font-family: 'Poppins', sans-serif;
        transition: all 2s ease-in;
        width: 100%;
        margin-top: 10px;
    }

    .product-card button:hover {
        background: linear-gradient(90deg, #0f131a 0%, #27292c 100%);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .product-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }


    .product-card a {
        text-decoration: none; 
    }

    .product-card a:hover {
        text-decoration: none; 
    }

    @media (max-width: 768px) {
        .products {
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        }

        .section {
            padding: 20px;
        }

        .section h2 {
            font-size: 24px;
        }

        .product-card {
            padding: 15px;
        }

        .product-card img {
            height: 180px;
        }

        .product-card h3 {
            font-size: 16px;
            min-height: 40px;
        }

        .product-card .price {
            font-size: 18px;
        }

        .original-price {
            font-size: 14px;
        }

        .savings {
            font-size: 13px;
        }

        .product-card button {
            padding: 10px 20px;
            font-size: 14px;
        }

        .discount-badge {
            font-size: 11px;
            padding: 5px 10px;
        }
    }

    @media (max-width: 480px) {
        .products {
            grid-template-columns: 1fr;
        }

        .product-card img {
            height: 160px;
        }

        .section h2 {
            font-size: 20px;
        }
    }

    .carousel-container {
        position: relative;
        width: 100vw;
        max-width: none;
        margin: 0;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        /* border-radius: 8px; */
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease;
        width: 100%;
    }

    .carousel-slide {
        min-width: 100%;
        width: 100%;
        height: 700px;
        position: relative;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .carousel-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
    }

    .carousel-buttons {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        pointer-events: none;
    }

    .carousel-button {
        background: rgba(255, 255, 255, 0.7);
        border: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        pointer-events: auto;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        font-size: 24px;
    }

    .carousel-button:hover {
        background: rgba(255, 255, 255, 0.9);
    }

    .carousel-dots {
        position: absolute;
        bottom: 20px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .carousel-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        border: none;
    }

    .carousel-dot.active {
        background: white;
        transform: scale(1.2);
    }

    /* Responsive carousel styles */
    @media screen and (max-width: 768px) {
        .carousel-container {
            width: 100vw;
            margin: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .carousel-slide {
            height: 50vh;
            background-size: cover;
            background-position: center;
        }

        .carousel-button {
            width: 40px;
            height: 40px;
            font-size: 20px;
        }

        .carousel-dots {
            bottom: 10px;
        }

        .carousel-dot {
            width: 10px;
            height: 10px;
        }
    }

    @media screen and (max-width: 480px) {
        .carousel-container {
            width: 100vw;
            margin: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .carousel-slide {
            height: 40vh;
            background-size: cover;
            background-position: center;
        }

        .carousel-button {
            width: 35px;
            height: 35px;
            font-size: 18px;
        }

        .carousel-dot {
            width: 8px;
            height: 8px;
        }
    }
</style>

