                <% if (products && products.featured && products.featured.length > 0) { %>
                    <% products.featured.forEach(function(product) { %>
                        <div class="product-card">
                            <a href="/product/<%= product._id %>" class="product-link">
                                <% if (product.offers && product.offers.length > 0) { %>
                                    <div class="discount-badge">
                                        <%= product.offers[0].discountAmount %>% OFF
                                    </div>
                                <% } %>
                                <img 
                                    src="<%= product.productImage && product.productImage.length > 0 ? 
                                        `${imageBasePath}${product.productImage[0]}` : 
                                        '/img/products/default-product.jpg' %>" 
                                    alt="<%= product.productName || 'Product' %>"
                                    onerror="this.onerror=null; this.src='/img/products/default-product.jpg'; console.log('Image failed to load:', this.src);"
                                >
                                <h3><%= product.productName %></h3>
                                <div class="price-container">
                                    <p class="price">
                                        <% if (product.offers && product.offers.length > 0) { %>
                                            ₹<%= (product.regularPrice - (product.regularPrice * product.offers[0].discountAmount / 100)).toLocaleString('en-IN') %>
                                            <span class="original-price">
                                                ₹<%= product.regularPrice.toLocaleString('en-IN') %>
                                            </span>
                                        <% } else { %>
                                            ₹<%= product.regularPrice.toLocaleString('en-IN') %>
                                        <% } %>
                                    </p>
                                    <% if (product.offers && product.offers.length > 0) { %>
                                        <p class="savings">
                                            Save ₹<%= (product.regularPrice * product.offers[0].discountAmount / 100).toLocaleString('en-IN') %>
                                        </p>
                                    <% } %>
                                </div>
