                                    <!-- <div class="product-offers">
                                        <h4>Offers:</h4>
                                        <ul>
                                            <% product.offers.forEach(function(offer) { %>
                                                <li><%= offer.offerName %> - <%= offer.discountAmount %>% OFF</li>
                                            <% }); %>
