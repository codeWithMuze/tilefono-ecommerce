<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Your Password</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --primary-color: #2563eb;
            --primary-hover: #1d4ed8;
            --primary-light: #dbeafe;
            --dark-text: #1f2937;
            --medium-text: #4b5563;
            --light-text: #6b7280;
            --border-color: #e5e7eb;
            --border-focus: #93c5fd;
            --background: #f9fafb;
            --card-background: #ffffff;
            --error: #ef4444;
            --error-light: #fef2f2;
            --success: #10b981;
            --success-light: #f0fdf4;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --border-radius: 8px;
            --transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            color: var(--dark-text);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            line-height: 1.6;
        }
        
        .container {
            background-color: var(--card-background);
            border-radius: 16px;
            box-shadow: var(--shadow-lg);
            width: 100%;
            max-width: 420px;
            padding: 48px 40px;
            position: relative;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .logo {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .logo-icon {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            border-radius: 16px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 16px;
            box-shadow: var(--shadow-md);
        }
        
        .logo-icon svg {
            width: 28px;
            height: 28px;
            stroke: white;
            stroke-width: 2.5;
        }
        
        h1 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--dark-text);
            text-align: center;
            letter-spacing: -0.02em;
        }
        
        .description {
            font-size: 16px;
            color: var(--medium-text);
            margin-bottom: 32px;
            text-align: center;
            line-height: 1.6;
            font-weight: 400;
        }
        
        .form-group {
            margin-bottom: 24px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            font-weight: 500;
            color: var(--dark-text);
            letter-spacing: -0.01em;
        }
        
        .input-wrapper {
            position: relative;
        }
        
        input[type="email"] {
            width: 100%;
            padding: 14px 46px;
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 16px;
            font-weight: 400;
            background-color: var(--card-background);
            transition: var(--transition);
            color: var(--dark-text);
        }
        
        input[type="email"]::placeholder {
            color: var(--light-text);
            font-weight: 400;
        }
        
        input[type="email"]:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            background-color: var(--card-background);
        }
        
        input[type="email"].is-invalid {
            border-color: var(--error);
            box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
        }
        
        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            stroke: var(--light-text);
            stroke-width: 2;
            pointer-events: none;
        }
        
        .input-with-icon {
            padding-left: 48px;
        }
        
        button {
            width: 100%;
            padding: 14px 24px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-sm);
            letter-spacing: -0.01em;
            position: relative;
            overflow: hidden;
        }
        
        button:hover:not(:disabled) {
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }
        
        button:active {
            transform: translateY(0);
        }
        
        button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }
        
        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s linear infinite;
            margin-right: 8px;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 32px;
            font-size: 14px;
            color: var(--medium-text);
        }
        
        .back-to-login a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }
        
        .back-to-login a:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }
        
        .message {
            padding: 16px;
            border-radius: var(--border-radius);
            margin-bottom: 24px;
            font-size: 14px;
            font-weight: 500;
            display: none;
            border-left: 4px solid;
        }
        
        .error-message {
            background-color: var(--error-light);
            color: var(--error);
            border-color: var(--error);
        }
        
        .success-message {
            background-color: var(--success-light);
            color: var(--success);
            border-color: var(--success);
        }
        
        .security-notice {
            background-color: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: var(--border-radius);
            padding: 16px;
            margin-top: 24px;
            font-size: 13px;
            color: var(--medium-text);
            text-align: center;
        }
        
        .security-notice svg {
            width: 16px;
            height: 16px;
            stroke: var(--medium-text);
            stroke-width: 2;
            margin-right: 6px;
            vertical-align: text-top;
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 32px 24px;
                margin: 16px;
                border-radius: 12px;
            }
            
            h1 {
                font-size: 24px;
            }
            
            .description {
                font-size: 15px;
            }
        }
        
        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <div class="logo-icon">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M12 1v6M12 17v6M4.22 4.22l4.24 4.24M15.54 15.54l4.24 4.24M1 12h6M17 12h6M4.22 19.78l4.24-4.24M15.54 8.46l4.24-4.24"/>
                </svg>
            </div>
        </div>
        
        <h1>Reset Password</h1>
        <p class="description">
            Enter your email address and we'll send you a verification code (OTP) to reset your password.
        </p>
        
        <div id="errorMessage" class="message error-message">
            Please enter a valid email address.
        </div>
        
        <div id="successMessage" class="message success-message">
            A verification code (OTP) has been sent to your email address. Please check your inbox and spam folder.
        </div>
        
        <form id="resetPasswordForm" >
            <div class="form-group">
                <label for="email">Email Address</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                        <polyline points="22,6 12,13 2,6"/>
                    </svg>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="Enter your email address" 
                        class="input-with-icon"
                        required
                        autocomplete="email"
                    >
                </div>
            </div>
            
            <button type="submit" id="resetButton">
                <div class="loading-spinner"></div>
                <span class="button-text">Send Verification Code</span>
            </button>
        </form>
        
        <div class="security-notice">
            <svg viewBox="0 0 24 24" fill="none">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            The verification code will expire in 10 minutes for security purposes.
        </div>
        
        <div class="back-to-login">
            Remember your password? <a href="/login">Sign in instead</a>
        </div>
    </div>

    <script>
        const form = document.getElementById('resetPasswordForm');
    const emailInput = document.getElementById('email');
    const errorMessage = document.getElementById('errorMessage');
    const successMessage = document.getElementById('successMessage');
    const resetButton = document.getElementById('resetButton');
    const buttonText = document.querySelector('.button-text');
    const loadingSpinner = document.querySelector('.loading-spinner');
    
    function validateEmail(email) {
        const emailRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;
        return emailRegex.test(email);
    }
    
    emailInput.addEventListener('input', function() {
        const email = this.value.trim();
        if (email && !validateEmail(email)) {
            this.classList.add('is-invalid');
        } else {
            this.classList.remove('is-invalid');
        }
    });
    
    emailInput.addEventListener('focus', function() {
        this.classList.remove('is-invalid');
        errorMessage.style.display = 'none';
    });
    
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        errorMessage.style.display = 'none';
        successMessage.style.display = 'none';
        
        const email = emailInput.value.trim();
        
        if (!email) {
            errorMessage.textContent = 'Please enter your email address.';
            errorMessage.style.display = 'block';
            emailInput.classList.add('is-invalid');
            emailInput.focus();
            return;
        }
        
        if (!validateEmail(email)) {
            errorMessage.textContent = 'Please enter a valid email address.';
            errorMessage.style.display = 'block';
            emailInput.classList.add('is-invalid');
            emailInput.focus();
            return;
        }
        
        resetButton.disabled = true;
        loadingSpinner.style.display = 'inline-block';
        buttonText.textContent = 'Sending...';
        
        try {
            console.log('email is ',email)
            const response = await fetch('/forgot-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email }),
            });
           

            const data = await response.json();
          
            if(data.success){
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: data.message, 
                }).then(()=>{
                    window.location.href = data.redirect
                })
            }else{
                
            errorMessage.textContent = data.message;
            errorMessage.style.display = 'block';

            resetButton.disabled = false;
            loadingSpinner.style.display = 'none';
            buttonText.textContent = 'Send Verification Code';

            }
            
    
        } catch (error) {
            errorMessage.textContent = error.message;
            errorMessage.style.display = 'block';
            emailInput.classList.add('is-invalid');
            resetButton.disabled = false;
            loadingSpinner.style.display = 'none';
            buttonText.textContent = 'Send Verification Code';
            emailInput.focus();
        }
    });
    
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';
        }
    });
    </script>
</body>
</html>